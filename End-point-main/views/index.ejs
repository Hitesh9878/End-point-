<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Call Status Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Call Status Dashboard</h1>

    <% if (records.length === 0) { %>
      <p class="empty">No call records received yet</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>CallSid</th>
            <th>Status</th>
            <th>Received At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(record => { %>
            <tr class="status-<%= record.status %>">
              <td><%= record.id.slice(0, 8) %>...</td>
              <td><%= record.status %></td>
              <td><%= record.received %></td>
              <td><a href="/details/<%= record.id %>">View Details</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>